From c9e9770bef6b00b86d2db9f48a8e10b68c75d74b Mon Sep 17 00:00:00 2001
From: Peter Griffin <peter.griffin@linaro.org>
Date: Mon, 28 Mar 2022 12:34:54 +0100
Subject: [PATCH 3/9] rk3399-rock-pi-4b-u-boot.dtsi: reserve optee memory to
 avoid synchronous aborts in Linux

Signed-off-by: Peter Griffin <peter.griffin@linaro.org>
Signed-off-by: Maxim Uvarov <maxim.uvarov@linaro.org>
---
 arch/arm/dts/rk3399-rock-pi-4b-u-boot.dtsi | 9 +++++++++
 1 file changed, 9 insertions(+)

diff --git a/arch/arm/dts/rk3399-rock-pi-4b-u-boot.dtsi b/arch/arm/dts/rk3399-rock-pi-4b-u-boot.dtsi
index 5640f5afbf..9b12b161b4 100644
--- a/arch/arm/dts/rk3399-rock-pi-4b-u-boot.dtsi
+++ b/arch/arm/dts/rk3399-rock-pi-4b-u-boot.dtsi
@@ -12,5 +12,14 @@
                         method = "smc";
                 };
         };
+        reserved-memory {
+                #address-cells = <2>;
+                #size-cells = <2>;
+                ranges;
 
+                optee@0x30000000 {
+                    reg = <0x0 0x30000000 0x0 0x2400000>;
+                    no-map;
+                };
+           };
 };
